<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ethermorgan.onedaycp.mapper.MatchGameMapper">
    <resultMap id="BaseResultMap" type="com.ethermorgan.onedaycp.model.MatchGame">
        <result column="UserId" property="userid" jdbcType="VARCHAR"/>
        <result column="UserName" property="username" jdbcType="VARCHAR"/>
        <result column="MatchUserName" property="matchusername" jdbcType="VARCHAR"/>
    </resultMap>
    <insert id="insert" parameterType="com.ethermorgan.onedaycp.model.MatchGame">
    insert into match_game (UserId, UserName, MatchUserName
      )
    values (#{userid,jdbcType=VARCHAR}, #{username,jdbcType=VARCHAR}, #{matchusername,jdbcType=VARCHAR}
      )
  </insert>
    <insert id="insertSelective" parameterType="com.ethermorgan.onedaycp.model.MatchGame">
        insert into match_game
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userid != null">
                UserId,
            </if>
            <if test="username != null">
                UserName,
            </if>
            <if test="matchusername != null">
                MatchUserName,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userid != null">
                #{userid,jdbcType=VARCHAR},
            </if>
            <if test="username != null">
                #{username,jdbcType=VARCHAR},
            </if>
            <if test="matchusername != null">
                #{matchusername,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>
    <update id="updateUser" parameterType="com.ethermorgan.onedaycp.dto.UpdateDto">
    update onedaycp.match_game set MatchUserName = #{matcherName,jdbcType=VARCHAR}
    where UserName = #{userName,jdbcType=VARCHAR}
    </update>
    <select id="selectUserInfo" parameterType="java.lang.String" resultType="java.lang.String">
    select MatchUserName from onedaycp.match_game where UserName = #{userName} limit 1
    </select>
    <select id="selectMatchUser" parameterType="java.lang.String" resultType="java.lang.String">
    select UserName from onedaycp.match_game
    where UserName != #{userName} and UserName not in (select MatchUserName from onedaycp.match_game where MatchUserName is not null)
    order by rand() limit 1
    </select>
    <select id="checkUser" parameterType="java.lang.String" resultType="java.lang.String">
    select UserName from onedaycp.match_game where UserName = #{userName} limit 1
    </select>
    <insert id="insertUser" parameterType="java.lang.String">
        insert into onedaycp.match_game (UserId, UserName)
        VALUES (UUID(), #{userName})
    </insert>
    <select id="checkCount" resultType="java.lang.Long">
        select count(*) from onedaycp.match_game
    </select>
</mapper>